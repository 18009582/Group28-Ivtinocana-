        <dt>
            Number Of Seats
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NUMBER_OF_SEATS.SEATS_ID)
        </dd>

        <dt>
            Transmission
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TRANSMISSION.TRANSMISSION_NAME)
        </dd>

    </dl>
</div>
<p>
    <div style="text-align:center">
        <input type="button" value="Edit" class="btn btn-warning" onclick="location.href='@Url.Action("Edit", "Edit", new { id = Model.CAR_ID }))'" />
    ||
      <input type="button" value="Back To List" class="btn btn-secondary" onclick="location.href='@Url.Action("Index","AdminCar")'" />
    </div>

</p>
