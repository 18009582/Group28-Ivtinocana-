@model Vehlution_Everything_.Models.CAR

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>CAR</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Make
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MAKE_ID)
        </dd>

        <dt>
           Year
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YEAR)
        </dd>

        <dt>
           Mileage
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MILAGE_)
        </dd>

        <dt>
            Listing Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LISTING_PRICE)
        </dd>

        <dt>
           Image
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IMAGE)
        </dd>

        <dt>
           Car Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CAR_STATUS.SASTUS_NAME)
        </dd>

        <dt>
            Model
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MODEL.MODEL_NAME)
