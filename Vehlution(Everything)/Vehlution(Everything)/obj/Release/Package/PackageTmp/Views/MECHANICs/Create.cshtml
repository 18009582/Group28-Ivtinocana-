@model Vehlution_Everything_.Models.MECHANIC

@{
    ViewBag.Title = "Add Mechanic";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Create new Car Make</title>
    <link rel="stylesheet" type="text/css" href="~/CSS1/StyleSheet1.css" />
</head>
    <div class="container" style="text-align:center">
        <div class="panel panel-default">
            <h1 style="color:orange">Mechanic Information</h1>
            <div class="panel-body">

                @using (Html.BeginForm("Create", "MECHANICs"))
                {
                    @Html.AntiForgeryToken()

                    <label>Mechanic Full Name</label><br />
                    <input type="text" id="FULL_NAME_" name="FULL_NAME_" style="width:50%" required /> <br />

                    <label>Mechanic Cell Number</label><br />
                    <input type="text" id="CELL_NUMBER_" name="CELL_NUMBER_" style="width:50%" required minlength="10" maxlength="10"/> <br />

                    <label>Mechanic Email Address</label><br />
                    <input type="email" id="EMAIL_" name="EMAIL_" style="width:50%" required /> <br />

                    <button type="submit" onclick="myFunction()" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                        <i class="fa fa-plus-square"></i>
                        <span class="glyphicon glyphicon-ok"></span> Add New Mechanic
                    </button> <button  title="Return to Mechanic View" type="button" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("Index","MECHANICs")'">
                        <i class="fa fa-times"></i>
                        <i class="glyphicon glyphicon-remove"></i> Cancel
                    </button>
                }

            </div>
        </div>
    </div>
