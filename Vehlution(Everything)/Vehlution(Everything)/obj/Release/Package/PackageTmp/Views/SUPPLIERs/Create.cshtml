@model Vehlution_Everything_.Models.SUPPLIER

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Add new Supplier</title>
    <link href="~/CSS1/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="text-align:center">
        <div class="panel panel-default">
            <h1 style="color:orange">Supplier Information</h1>
            <div class="panel-body">

                @using (Html.BeginForm("Create", "SUPPLIERs"))
                {
                    @Html.AntiForgeryToken()

                    <label>Supplier Name </label><br />
                    <input type="text" id="NAME_" name="NAME_" style="width:50%" required/> <br />

                    <label>Supplier Cell Number</label><br />
                    <input type="text" id="CELL_NUMBER_" name="CELL_NUMBER_" style="width:50%" required minlength="10" maxlength="10"/> <br />

                    <label>Supplier Email Address</label><br />
                    <input type="email" id="EMAIL_" name="EMAIL_" style="width:50%" required/> <br />

                    <label>Supplier Physical Address</label><br />
                    <input type="text" id="ADDRESS" name="ADDRESS" style="width:50%" required/> <br />

                    <button type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                        <i class="fa fa-plus-square"></i>
                        <span class="glyphicon glyphicon-ok"></span> Add New Supplier
                    </button> 
                    <button type="button" title="Return to Index page" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("Index","SUPPLIERs")'">
                        <i class="fa fa-times"></i>
                        <i class="glyphicon glyphicon-remove"></i> Cancel
                    </button>
                }

            </div>
        </div>
    </div>

    <div>
        <div style="text-align:center">
            <input type="button" value="Back To List" title="Return to Homepage" class="btn btn-secondary" onclick="location.href='@Url.Action("Index","SUPPLIERs")'" />
        </div>
    </div>

</body>
</html>


