@model Vehlution_Everything_.Models.CAR_BOOKING_SLOTS

@{
    Layout = null;
}

<!DOCTYPE html>


<head>
    <link rel="stylesheet" href="~/CSS/StyleSheet1.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="~/CSS1/StyleSheet1.css" rel="stylesheet" />
    <style>
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        /* Modal Content */
        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
            text-align: center;
        }

        /* The Close Button */
        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #000;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<div class="container" style="text-align:center">
    <div class="panel panel-default">
        <h1 style="color:orange">Edit @Model.CAR_BOOKING_SLOTS_ID Car Makes</h1>
        <div class="panel-body">

            <label>Car Make Name </label><br />
            @using (Html.BeginForm("Edit", "CAR_BOOKING_SLOTs"))
            {
                @Html.AntiForgeryToken()

                <input type="hidden" id="CAR_BOOKING_SLOTS_ID" name="CAR_BOOKING_SLOTS_ID" value="@Model.CAR_BOOKING_SLOTS_ID" readonly />

                <label>Booking Times</label><br />
                @Html.DropDownList("TIME_ID", null, htmlAttributes: new { @class = "select" })<br />

                <label>Booking Dates</label><br />
                @Html.DropDownList("DAY_", null, htmlAttributes: new { @class = "select" })<br />

                <label>Booking Status</label><br />
                @Html.DropDownList("STATUSID", null, htmlAttributes: new { @class = "select" })<br />

                <label>Associated Employee</label><br />
                @Html.DropDownList("EMPLYEE_ID", null, htmlAttributes: new { @class = "select" })<br />



                <button type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                    <i class="fa fa-plus-square"></i>
                    <span class="glyphicon glyphicon-ok"></span> Update Car Booking Slot
                </button>
                <button type="button" title="Go back to Home screen" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("BookingSlotsIndex", "CAR_BOOKING_SLOTs")'">
                    <i class="fa fa-times"></i>
                    <i class="glyphicon glyphicon-remove"></i> Cancel
                </button><br />
            }
            <button type="submit" class="btn btn-default btn-sm" id="AddTime" name="AddTime" style="background-color:lightgreen" onclick="location.href='@Url.Action("Create","BOOKING_TIMES")'">
                <i class="fa fa-plus-square"></i>
                <span class="glyphicon glyphicon-ok"></span> Add New Times
            </button><br />
            <button type="submit" class="btn btn-default btn-sm" id="AddDate" name="Add Date" style="background-color:lightgreen" onclick="location.href='@Url.Action("Create","BOOKING_DATES")'">
                <i class="fa fa-plus-square"></i>
                <span class="glyphicon glyphicon-ok"></span> Add New Dates
            </button>

        </div>
    </div>
</div>
<div id="CreateTime" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Create", "BOOKING_TIMES"))
        {
            @Html.AntiForgeryToken()

            <label>Start Time</label><br />
            <input type="text" id="START_TIME_" name="START_TIME_" style="width:50%" /> <br />

            <label>End Time</label><br />
            <input type="text" id="END_TIMEE" name="END_TIME" style="width:50%" /> <br />
            <br />
            <button type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                <i class="fa fa-plus-square"></i>
                <span class="glyphicon glyphicon-ok"></span> Add New Booking Time
            </button> <button type="button" title="Go back to edit time slot screen" id="closebtn" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("Create","CAR_BOOKING_SLOTS")'">
                <i class="fa fa-times"></i>
                <i class="glyphicon glyphicon-remove"></i> Cancel
            </button>
        }
    </div>
</div>

<div id="CreateDate" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Create", "BOOKING_DATES"))
        {
            @Html.AntiForgeryToken()

            <label>Booking Date</label><br />
            <input type="date" id="DATE" name="DATE" style="width:50%" /> <br />
            <br />
            <button type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                <i class="fa fa-plus-square"></i>
                <span class="glyphicon glyphicon-ok"></span> Add New Booking Date
            </button> 
            <button type="button" title="Go back to edit time slot screen" id="closebtn" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("Create","CAR_BOOKING_SLOTS")'">
                <i class="fa fa-times"></i>
                <i class="glyphicon glyphicon-remove"></i> Cancel
            </button>
        }

    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    // Get the modal
    var closebtn = document.getElementById("close");
    var addtime = document.getElementById("AddTime");
    var mCreateTime = document.getElementById("CreateTime")
    var adddate = document.getElementById("AddDate");
    var mCreateDate = document.getElementById("CreateDate")
    addtime.onclick = function () {
        mCreateTime.style.display = "block"
    }
    adddate.onclick = function () {
        mCreateDate.style.display = "block"
    }
    function DelCon(msg) {
        document.getElementById(DelConMsg).innerHTML = msg;
        modal.style.display = "block";
    }
    function del(id) {
        document.getElementById('dellabel').innerText = "Are you sure you want to delete time slot " + id + " ?";
        document.getElementById('id').value = id;
        modal1.style.display = "block";
    }
    closebtn.onclick = function () {
        modal1.style.display = "none";
        modal.style.display = "none";
    }
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>
</body>
</html>