@model Vehlution_Everything_.Models.CAR

@{
    ViewBag.Title = "Create";
    Layout = null;
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" type="text/css" href="~/CSS1/StyleSheet1.css" />
</head>

<div class="container" style="text-align:center">
    <div class="panel panel-default">
        <h1 style="color:orange">Car Details</h1>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "CLIENTCARs"))
            {
                @Html.AntiForgeryToken()

                <label>Car Registration</label><br />
                <input type="text" id="CAR_REG" name="CAR_RED" style="width:50%" required maxlength="8" minlength="8" /> <br />

                <label>Seats</label>
                @Html.DropDownList("SEATS_ID", null, htmlAttributes: new { @class = "form-control" })


                <label>Colour</label>
                @Html.DropDownList("COLOUR_ID", null, htmlAttributes: new { @class = "form-control" })

                <label>Transmission</label>
                @Html.DropDownList("TRANSMISSION_ID", null, htmlAttributes: new { @class = "form-control" })

                <label>Doors</label>
                @Html.DropDownList("DOORS_ID", null, htmlAttributes: new { @class = "form-control" })

                <label>Fuel Type</label>
                @Html.DropDownList("FUELTYPE_ID", null, htmlAttributes: new { @class = "form-control" })

                <label>Model</label>
                @Html.DropDownList("MODEL_ID", null, htmlAttributes: new { @class = "form-control" })

                <label>Year</label>
                @Html.EditorFor(model => model.YEAR, new { htmlAttributes = new { @class = "form-control" } })

                <label>Mileage</label>
                @Html.EditorFor(model => model.MILAGE_, new { htmlAttributes = new { @class = "form-control" } })

                <label>Listing Price</label>
                @Html.EditorFor(model => model.LISTING_PRICE, new { htmlAttributes = new { @class = "form-control" } })

                <label>Body Type</label>
                @Html.DropDownList("CAR_TYPEID", null, htmlAttributes: new { @class = "form-control" })

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Image</label>
                        <input type="file" name="IMAGE" id="IMAGE" style="width: 100%" />

                        <button type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                            <i class="fa fa-plus-square"></i>
                            <span class="glyphicon glyphicon-ok"></span> Add My Car
                        </button> <button type="button" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("Index", "MAKEs")'">
                            <i class="fa fa-times"></i>
                            <i class="glyphicon glyphicon-remove"></i> Cancel
                        </button>





                    </div>
                </div>
            }

</html>

