@model Vehlution_Everything_.Models.SALE

@{
    Layout = null;
}

@{
    var message = TempData["AlertMessage"] ?? string.Empty;
}

<script type="text/javascript">
    var message = '@message';
    if(message)
        alert(message);
</script>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="~/CSS1/StyleSheet1.css" rel="stylesheet" />
    <title>Create</title>
</head>
<body>
    <div class="container" style="text-align:center">
        <div class="panel panel-default">
            <h1 style="color:orange">Sale details</h1>
            <div class="panel-body">


                @using (Html.BeginForm("Create", "SALEs", new { enctype = "multipart/form-data" }))
                {

                    <label>Car Registration</label><br />
                    @Html.DropDownList("CAR_REG", null, htmlAttributes: new { @class = "select" })<br />
                    <label>Sale Date</label><br />
                    @DateTime.Now;<br />
                    <input type="hidden" value="@DateTime.Now" id="SALE_DATE_" name="SALE_DATE_" />
                    // <input type="date" id="SALE_DATE_" name="SALE_DATE_" style="width:50%" required /> <br />

                    <label>Choose and Employee</label><br />
                    @Html.DropDownList("EMPLOYEE_ID", null, htmlAttributes: new { @class = "select" }) <br />

                    <label>Accepted Offer</label><br />
                    @Html.DropDownList("Amount", null, htmlAttributes: new { @class = "select" }) <br />
                    <label>Car Contract</label><br />
                    <input type="file" id="CAR_CONTRACT_" name="CAR_CONTRACT_" style="width:50%" required /> <br />
                    //change datatype to file or document



                    <button type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                        <i class="fa fa-plus-square"></i>
                        <span class="glyphicon glyphicon-ok"></span> Add Sale
                    </button> <button type="button" class="btn btn-default btn-sm" style="background-color:red" onclick="location.href='@Url.Action("Index","SALEs")'">
                        <i class="fa fa-times"></i>
                        <i class="glyphicon glyphicon-remove"></i> Cancel
                    </button>
                }

            </div>
        </div>
    </div>

    <input type="button" value="Home" onclick="location.href='@Url.Action("AdminNav","Nav")'" />
</body>

</html>
