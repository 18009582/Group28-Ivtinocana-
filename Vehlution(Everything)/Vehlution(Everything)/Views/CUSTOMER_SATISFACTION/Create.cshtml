@model Vehlution_Everything_.Models.CUSTOMER_SATISFACTION

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/CSS1/StyleSheet1.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container" style="text-align:center">
            <div class="panel panel-default">
                <h1 style="color:orange">Please take a moment to fill in our survey :)</h1>

                <h2>Scale</h2>
                <h3>1: Poor  2: Fair  3: Good  4: Very Good  5: Excellent</h3>
                <div class="panel-body">


                    @using (Html.BeginForm("Create", "CUSTOMER_SATISFACTION"))
                    {

                        <label>How would you rate your experience with us?</label><br />
                        <input type="number" id="Experience" name="Experience" style="width:50%" required max="5" min="1" /> <br />

                        <label>What are the chances of recommending us to a friend?</label><br />
                        <input type="number" id="Recommendation" name="Recommendation" style="width:50%" required max="5" min="1" /> <br />

                        <label>Do you find our website user-friendly?</label><br />
                        <input type="number" id="Website" name="Website" style="width:50%" required max="5" min="1" /> <br />

                        <label>How would you rate our response time?</label><br />
                        <input type="number" id="ResponseTime" name="ResponseTime" style="width:50%" required max="5" min="1" /> <br />

                        <label>How would you rate our customer communications?</label><br />
                        <input type="number" id="CustomerComms" name="CustomerComms" style="width:50%" required max="5" min="1" /> <br />


                        <button  title="Submit your ratings" type="submit" class="btn btn-default btn-sm" id="Create" name="Create" style="background-color:lightgreen">
                            <i class="fa fa-plus-square"></i>
                            <span class="glyphicon glyphicon-ok"></span> Submit
                        </button>
                    }

                </div>
            </div>
        </div>
    }
    <br />
    <div style="text-align:center">
        <input title="Return to homepage" type="button" value="Home" class="btn btn-secondary" onclick="location.href='@Url.Action("ClientNav","Nav")'" />
    </div>
</body>
</html>
